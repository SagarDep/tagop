<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/state_history_empty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_search_history_palette_3_100dp"
            android:drawablePadding="@dimen/padding_normal"
            android:gravity="center"
            android:text="@string/state_history_empty_title"
            android:textColor="@color/palette_1"
            android:textSize="22sp">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/padding_normal"
            android:text="@string/state_history_empty_instruction"
            android:textColor="@color/palette_4"/>
    </LinearLayout>
</FrameLayout>
